# MCP Meme Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Authentication token for MCP server
# This should be a secure, randomly generated string
AUTH_TOKEN=devtoken_shared_for_team

# Your phone number or identifier (required by Puch)
MY_NUMBER=your_phone_number_here

# Google Gemini API key for meme generation
# Get this from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Server configuration
MCP_PORT=8086
MCP_HOST=0.0.0.0

# Optional: Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
